{
  "name": "utarwyn/files-php-service",
  "description": "Simple PHP service to manage web-based files.",
  "license": "MIT",
  "type": "project",
  "authors": [
    {
      "name": "Utarwyn",
      "email": "maxime.malgorn@laposte.net"
    }
  ],
  "require": {
    "bramus/router": "^1.4",
    "vlucas/phpdotenv": "^4.1",
    "firebase/php-jwt": "^5.1",
    "ramsey/uuid": "^4.0",
    "ext-fileinfo": "*",
    "ext-json": "*",
    "php": ">=7.1"
  },
  "autoload": {
    "psr-4": {
      "FilesService\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "FilesServiceTest\\": "test/"
    }
  },
  "require-dev": {
    "phpro/grumphp": "^0.18.0",
    "php-parallel-lint/php-parallel-lint": "^1.1",
    "squizlabs/php_codesniffer": "^3.5",
    "phpunit/phpunit": "^9.0"
  },
  "scripts": {
    "test": "./vendor/bin/grumphp run",
    "unit-test": "./vendor/bin/phpunit"
  }
}
